# CHROOT
# if you need to re-enter choot (mount devices still as in 6)
chroot "$LFS" /usr/bin/env -i              \
    HOME=/root TERM="$TERM" PS1='\u:\w\$ ' \
    PATH=/bin:/usr/bin:/sbin:/usr/sbin     \
    /bin/bash --login

# DHCP
cat > /etc/systemd/network/10-eth0-dhcp.network << "EOF"
[Match]
Name=eth0
[Network]
DHCP=ipv4
EOF

# HOSTNAME
echo "XXXXXXXX" > /etc/hostname

# HOSTS
cat > /etc/hosts << "EOF"
127.0.0.1 localhost
::1       localhost
EOF

# HARDWARE CLOCK SET TO UTC?
hwclock  --localtime --show

# if set to UTC, remove adjtime file (else see doc)
rm -fv /etc/adjtime

# LOCALE

# list available locales
locale -a

# get alias for the locale name
# (repalce en_GB.iso88591 with output selcted from above command)
LC_ALL=en_GB.iso88591 locale charmap

# test
# use the alias in the place of the output of locale -a
# (repalce en_GB.iso88591 with output selcted from above commands)
LC_ALL=en_GB.ISO-8859-1 locale language
LC_ALL=en_GB.ISO-8859-1 locale charmap
LC_ALL=en_GB.ISO-8859-1 locale int_curr_symbol
LC_ALL=en_GB.ISO-8859-1 locale int_prefix

# save
cat > /etc/locale.conf << "EOF"
LANG=<ll>_<CC>.<charmap><@modifiers>
EOF

# INPUTRC
see 7a-inputrc

# SHELLS

cat > /etc/shells << "EOF"
/bin/sh
/bin/bash
EOF
