# FSTAB

# get the current devices mounted, and save to fstab

cat > /etc/fstab << "EOF"
# file system   mount-point type    options             dump  fsck order
/dev/<xxx>      /           <fff>   defaults            1     1
/dev/<yyy>      swap        swap    pri=1               0     0
EOF

# LINUX

tar xf linux-4.4.2.tar.*
cd linux-4.4.2

make mrproper

# create a default config
make defconfig

# start config. replace en_US.UTF-8 with the host's $LANG
make LANG=en_US LC_ALL= menuconfig
# change the settings as set out in the note on page 252

# build
time make -j5
make modules_install

# install boot:
cp -v arch/x86/boot/bzImage /boot/vmlinuz-4.4.2-lfs-20160304-systemd
cp -v System.map /boot/System.map-4.4.2
cp -v .config /boot/config-4.4.2

# docs
install -d /usr/share/doc/linux-4.4.2
cp -r Documentation/* /usr/share/doc/linux-4.4.2

# no need to remove the sources, but must then chown them
cd ../
chown -R 0:0 linux-4.4.2

# module load order

install -v -m755 -d /etc/modprobe.d
cat > /etc/modprobe.d/usb.conf << "EOF"
install ohci_hcd /sbin/modprobe ehci_hcd ; /sbin/modprobe -i ohci_hcd ; true
install uhci_hcd /sbin/modprobe ehci_hcd ; /sbin/modprobe -i uhci_hcd ; true
EOF

# GRUB

# assuming sda is the drive with / or /boot
grub-install /dev/sda

# had issue with the above, see https://wiki.archlinux.org/index.php/GRUB#Install_to_partition_or_partitionless_disk
# chattr -i /boot/grub/i386-pc/core.img
# grub-install --target=i386-pc --debug --force /dev/sda1
# chattr +i /boot/grub/i386-pc/core.img

# setup grub.conf. the kernel files are relative to the partition used, so remove /boot
cat > /boot/grub/grub.cfg << "EOF"
set default=0
set timeout=5
insmod ext2
set root=(hd0,1)
menuentry "GNU/Linux, Linux 4.4.2-lfs-20160304-systemd" {
        linux   /vmlinuz-4.4.2-lfs-20160304-systemd root=/dev/sda2 ro
}
EOF
